<p id="notice"><%= notice %></p>

<h1>Listing Guests</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.name %></td>
        <td><%= guest.email %></td>
        
        <% if guest.room.nil? %>
          <td> N/A </td>
        <% else %>
          <td><%= guest.room.name %></td>
        <% end %>
        
        <td><%= link_to 'Show', guest %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="nbtn">
  <%= link_to 'New Guest', new_guest_path, class: "btn btn-primary" %>
</div>

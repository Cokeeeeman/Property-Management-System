
<p id="notice"><%= notice %></p>

<h1>
  <strong>Room:</strong>
  <%= @room.name %>
</h1>

<p>
  The current guest living in this room is: <strong> <%= @room.guest.name %></strong>
</p>

<p>Information of the current guest: </p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @room.guest.id %></td>
        <td><%= @room.guest.name %></td>
        <td><%= @room.guest.email %></td>
      </tr>
  </tbody>
</table>


<%= link_to 'Edit', edit_room_path(@room), class: "btn btn-primary" %> 
<%= link_to 'Back', rooms_path, class: "btn btn-primary"%>
